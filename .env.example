################################################################################
# Fleet Management System - Environment Variables Template
################################################################################
# USAGE:
#   1. Copy this file: cp .env.example .env
#   2. Fill in actual values in .env
#   3. NEVER commit .env to version control
#
# SECURITY: This template is SAFE to commit (no real secrets)
################################################################################

#------------------------------------------------------------------------------
# üåê SERVER CONFIGURATION
#------------------------------------------------------------------------------
PORT=8080
APP_ENV=development
BASE_URL=http://localhost:8080

#------------------------------------------------------------------------------
# üóÑÔ∏è DATABASE CONFIGURATION (PostgreSQL)
#------------------------------------------------------------------------------
# Full connection string (recommended)
DB_URL=jdbc:postgresql://127.0.0.1:5435/fleet_db
DB_USER=fleet_user
DB_PASSWORD=secret_123
DB_POOL_SIZE=10

# Alternative: Use DATABASE_URL for Render compatibility
# DATABASE_URL=jdbc:postgresql://127.0.0.1:5435/fleet_db?user=fleet_user&password=secret_123

#------------------------------------------------------------------------------
# üî¥ REDIS CONFIGURATION (Caching & Rate Limiting)
#------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=  # Uncomment if Redis requires authentication

#------------------------------------------------------------------------------
# üîê JWT AUTHENTICATION
#------------------------------------------------------------------------------
# CRITICAL: Generate a strong secret with: openssl rand -base64 64
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_STRING_IN_PRODUCTION
JWT_ISSUER=fleet-management
JWT_AUDIENCE=fleet-api
JWT_EXPIRATION=3600  # Token expiration in seconds (1 hour)

#------------------------------------------------------------------------------
# üìß EMAIL CONFIGURATION (SMTP)
#------------------------------------------------------------------------------
# For user registration, password reset, email verification
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-here
SMTP_FROM=noreply@example.com
SMTP_TLS=true

# Email verification settings
EMAIL_VERIFICATION_ENABLED=true
EMAIL_VERIFICATION_EXPIRATION=86400  # 24 hours

#------------------------------------------------------------------------------
# üîí SECURITY & HASHING
#------------------------------------------------------------------------------
# Bcrypt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=10

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_USER=120

#------------------------------------------------------------------------------
# üìä OBSERVABILITY & LOGGING
#------------------------------------------------------------------------------
# Log level: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
SQL_LOGGING=false
HTTP_LOGGING=true

# Metrics & monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

#------------------------------------------------------------------------------
# üöÄ PERFORMANCE TUNING
#------------------------------------------------------------------------------
# Connection pool sizes
DB_MAX_POOL_SIZE=20
REDIS_MAX_POOL_SIZE=10

# Request timeout (milliseconds)
REQUEST_TIMEOUT=30000

#------------------------------------------------------------------------------
# üß™ DEVELOPMENT & DEBUGGING
#------------------------------------------------------------------------------
# Enable debug mode (DO NOT enable in production)
DEBUG_MODE=false

# Enable detailed error responses (DO NOT enable in production)
DETAILED_ERRORS=false

#------------------------------------------------------------------------------
# üîß KAFKA CONFIGURATION (Deferred - Phase 4)
#------------------------------------------------------------------------------
# Uncomment when implementing event-driven architecture
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_GROUP_ID=fleet-management-consumer
# KAFKA_AUTO_OFFSET_RESET=earliest

#------------------------------------------------------------------------------
# üåç OPTIONAL: External Integrations
#------------------------------------------------------------------------------
# Payment gateway (if implementing payments)
# PAYMENT_API_KEY=
# PAYMENT_SECRET=

# SMS provider (if implementing SMS notifications)
# SMS_API_KEY=
# SMS_SECRET=

# Cloud storage (if implementing file uploads)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

################################################################################
# END OF .env.example
# Remember: Copy to .env and fill in actual values!
################################################################################
